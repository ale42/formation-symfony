{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Computer</h1>

    <table class="record_properties table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ entity.ip }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ entity.enabled }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
        <a class="btn btn-sm btn-primary" href="{{ path('computer') }}">
            <span class="glyphicon glyphicon-arrow-left"></span>
            Back to the list
        </a>
        <a class="btn btn-sm btn-warning" href="{{ path('computer_edit', { 'id': entity.id }) }}">
            <span class="glyphicon glyphicon-pencil"></span>
            Edit
        </a>
        {{ form(delete_form) }}
</ul>
{% endblock %}
